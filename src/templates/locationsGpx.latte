{templateType App\Web\Locations\LocationsTemplate}
{contentType application/gpx}
<?xml version="1.0" encoding="UTF-8"?>
<gpx version="1.1" creator="BetterLocation https://better-location.palider.cz">
    <metadata>
        <name>BetterLocation</name>
        <desc>BetterLocation points generated from better-location.palider.cz</desc>
        <author>
            <name>Tomas Palider (DJTommek)</name>
            <email>tomas@palider.cz</email>
            <link>tomas.palider.cz</link>
        </author>
        <link href="{$baseUrl}">
            <text>BetterLocation</text>
            <type>text/html</type>
        </link>
        <time>{$nowUtcText}</time>
    </metadata>
{foreach $locations as $location}
	<wpt lat="{$location->lat}" lon="{$location->lon}">
		<time>{$nowUtcText}</time>
		<name>BetterLocation {$location->latLon}</name>
		<desc>Address: {$location->address}</desc>
		<link href="{$baseUrl}/{$location->latLon}">
			<text>BetterLocation {$location->latLon}</text>
			<type>text/html</type>
		</link>
	</wpt>
{/foreach}
</gpx>
